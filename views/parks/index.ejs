<% layout('layouts/boilerPlate') %>
  <link rel="stylesheet" href="/styleSheets/app.css">
  <div id="cluster-map"></div>

  <% for(let park of parks){ %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if(park.images){ %>
            <img src="<%= park.images[0].url%>" alt="park" class="img-fluid">
            <%} else { %>
              <img
                src="https://res.cloudinary.com/dbb9ypmi0/image/upload/v1657074104/National%20Parks/cgjuah1j24lkk8qkj9ev.jpg"
                alt="park" class="img-fluid">
              <% } %>

        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-text">
              <%= park.name%>
            </h3>
            <p class="card-text">
              <%= park.intro%>
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%= park.location%>
              </small>
            </p>
            <p class="card-text">
              <!-- <small>
                Author : <%=park.author.username%>
              </small> -->
            </p>
            <p><a class="btn btn-primary" href="parks/<%=park._id%>">Show Details</a></p>

          </div>
        </div>
      </div>


    </div>

    <%}%>

      <script>
        const mapboxToken = '<%-process.env.mapboxToken%>';
        const parks = { features: <%-JSON.stringify(parks)%>};
      </script>
      <script src="/scripts/clusterMap.js"></script>